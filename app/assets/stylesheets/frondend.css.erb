body
{
   background: #FFF url(<%= asset_path 'v1/bg.png' %>) no-repeat top center; 
}
ul, li {
    list-style: none outside none;
}

.fl
{
  float:left;
}
.fr
{
  float:right;
}

#topBar {
    background: #363636;
}

#topNav ul{
    margin: 0;
    padding: 0;
}

#topNav ul li {
    border-right: 1px solid #545454;
    list-style-type:none;
    float:left;
}

#topNav ul li a {
    color: #FFF;
    margin:0; 
    padding:5px 10px;
    display:block;
}

#topNav ul li a.index {
  color: #BF1F30;
}
#topNav ul li.selected {
    background: #FFF;
}
  #topNav a:hover, #topNav a:focus, #topNav a:active
  { background:#eeeeee;
    color:#014c2e;
  } 

#login a.signup 
{
    color: #fff;
}
header {
    background: url(<%= asset_path('v1/topshadow.png')%>) no-repeat center 0;
    
} 
/* main nav */

#mainNav {
    position: relative;
    z-index: 2;
}

#mainNav ul {
    background: #FFF;
    border-top: 1px solid #CBCBC6;
    border-right: 1px solid #CBCBC6;
    margin: 0;
}

#mainNav ul li {
    float: left;
}

#mainNav ul li a {
    background: #FFF;
    border-left: 1px solid #CBCBC6;
    color: #464646;
    display: block;
    width:100px;
    text-align:center;
    padding:5px 10px;
}

#mainNav ul li a:hover {
    background: #CBCBC6;
    color: #000;
}

#mainNav ul li.selected a {
    background: #363636 url(<%=asset_path('v1/nav-selected.png')%>) no-repeat top center;
    color: #FFF;
}

#mainNav ul li.find a,
#mainNav ul li.find a:hover,
#mainNav ul li.find.selected a {
    background: #BF1F30;
    border-left: 1px solid #BF1F30;
    color: #FFF;
    min-width: 77px;
}

.basic-search-options {
    background: #BF1F30;    
}


.basic-search-options .filter {
   background: #BF1F30;    
   border: 0;
   float:left;
}


