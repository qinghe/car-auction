.blogpost
{
  border-left: 1px solid #CBCBC6;
  border-right: 1px solid #CBCBC6;
  border-bottom: 1px solid #CBCBC6;
}
dl.blog_category-list
{
  padding:10px;
}
.blogpost-content{
  padding:10px;
  border-left: 1px solid #CBCBC6;
  min-height:460px; _height:460px; overflow: visible; 
}

.wrapper{
  border-left: 1px solid #CBCBC6;
  border-right: 1px solid #CBCBC6;
  border-bottom: 1px solid #CBCBC6;  
}

.foot {
    /*background-image: url("/resource/images/footbg.gif");*/
    background-repeat: repeat-x;
    border: 1px solid #CCCCCC;
    height: 110px;
    margin: 2px auto 0;
    padding: 10px 0;
    width: 968px;
}
.foot .inf {
    border-right: 1px dotted #C3D5E3;
    width: 120px;
    height: 100px;
    list-style-type: none;
    padding-left: 30px;
    
}
.foot .inf1 {
    width: 110px;
    height: 100px;
    list-style-type: none;
    padding-left: 30px;
    
}
.foot .inf h3, .inf1 h3 {
    /*background-image: url("/resource/images/ico.gif");*/
    background-position: 1px 50%;
    background-repeat: no-repeat;
    color: #444444;
    font-family: "微软雅黑";
    font-size: 12px;
    font-weight: bold;
    line-height: 30px;
    padding-left: 10px;
    margin-bottom: 0.4em;
}
.inf li, .inf1 li {
    line-height: 22px;
    padding-left: 10px;
    width: 100px;
}

.foot li {
    float: left;
    list-style-type: none;
}

