/*
  Place all the styles related to the matching controller here.
  They will automatically be included in application.css.
*/
body
{
   background: #FFF url(<%= asset_path 'v1/bg.gif' %>) no-repeat top center; 
}
ul, li {
    list-style: none outside none;
}
h1.page-title{
  display:none;
}
.fl
{
  float:left;
}
.fr
{
  float:right;
}

#topBar {
    background: #363636;
}

#topNav ul{
    margin: 0;
    padding: 0;
}

#topNav ul li {
    border-right: 1px solid #545454;
    list-style-type:none;
    float:left;
}

#topNav ul li a {
    color: #FFF;
    margin:0; 
    padding:5px 10px;
    display:block;
}

#topNav ul li a.index {
  color: #BF1F30;
}
#topNav ul li.selected {
    background: #FFF;
}
  #topNav a:hover, #topNav a:focus, #topNav a:active
  { background:#eeeeee;
    color:#014c2e;
  } 

#login a.signup 
{
    color: #fff;
}
header {
  /*  background: url(<%= asset_path('v1/topshadow.png')%>) no-repeat center 0; */
    
} 
/* main nav */

#mainNav {
    position: relative;
    z-index: 2;
}

#mainNav ul {
    background: #FFF;
    border-top: 1px solid #CBCBC6;
    border-right: 1px solid #CBCBC6;
    margin: 0;
}

#mainNav ul li {
    float: left;
}

#mainNav ul li a {
    background: #FFF;
    border-left: 1px solid #CBCBC6;
    color: #464646;
    display: block;
    width:100px;
    text-align:center;
    padding:5px 10px;
}

#mainNav ul li a:hover {
    background: #CBCBC6;
    color: #000;
}

#mainNav ul li.selected a {
    background: #363636 url(<%=asset_path('v1/nav-selected.png')%>) no-repeat top center;
    color: #FFF;
}

#mainNav ul li.find a,
#mainNav ul li.find a:hover,
#mainNav ul li.find.selected a {
    background: #BF1F30;
    border-left: 1px solid #BF1F30;
    color: #FFF;
    min-width: 77px;
}

.basic-search-options {
    background: #BF1F30;  
    padding:10px 15px 10px 30px;  
}


.basic-search-options .filter {
   background: #BF1F30;    
   border: 0;
   float:left;
   margin-right: 15px;
   padding-right: 15px;
}

.basic-search-options .search-for { 
  border-right: 1px solid #FFFFFF;
}
.basic-search-options .btn { 
  text-align:bottom;
}
.basic-search-options .btn input
{
  padding:0 10px;
}
.basic-search-options .title{
  color: #FFFFFF;
}
.basic-search-options select{
  margin:0.2em 0;
}

#slider{
    
}
#slider ul{
    margin:0;
}
.content h2{
  margin:0;
  padding:0 8px;
  background-color:black;
  color:white;
}
.left-section {
    float: left;
    overflow: hidden;
    width: 49%;
}
.right-section {
    float: right;
    overflow: hidden;
    width: 49%;
}
table.auction-list, table.car-list, table.car-detail{
  width:100%;
  border-color:#DCDCD8;
  border-left: 1px solid #DCDCD8;
  border-right: 1px solid #DCDCD8;
  border-bottom: 1px solid #DCDCD8;
}
.auction-detail
{
  border-color:#DCDCD8;
  border-left: 1px solid #DCDCD8;
  border-right: 1px solid #DCDCD8;
  border-bottom: 1px solid #DCDCD8;  
}
.carimage-list
{
  border: 1px solid #DCDCD8;
}
table.auction-list th, table.car-list th{
  background-color:#D6D6D6;
}
table.auction-list td, table.car-list td{
  background-color:#FFFFFF;
