<% content_for :title, "欢迎回来！" %>

<div class="prepend-1 span-18 last">
  <h2>近期拍卖</h2>
  <% unless @auctions.empty? %>
    <div ><div class="box">
        <% @auctions.each do |auction| %>
        <% highlight = (auction.highlight)? :highlight : nil %>
          <%= link_to escape_auction(auction), auction_path(auction), :class => highlight %>
          <span style="float: right;font-size: 90%">
            <%= auction.budget %>
          </span>
          <br />
        <% end %>
      </div></div>
      <%= will_paginate @auctions %>
  <% else %>
    <div class="notice">现在没有公布的拍卖。</div>
  <% end %>
</div>

<div class="prepend-1 span-18 last">
  <h2>最近的博客条目</h2>
  <% unless @blogs.empty? %>
    <div class="span-8"><div class="box">
        <% @blogs.shift(@blogs.length/2).each do |blog| %>
          <%= link_to blog.title, user_blogpost_path(blog.user, blog) %>
          <span style="float: right;">
            <%= link_to blog.user.login, user_path(blog.user) %>
          </span>
          <br />
        <% end %>
      </div></div>
    <div class="span-8 last"><div class="box">
        <% @blogs.each do |blog| %>
          <%= link_to blog.title, user_blogpost_path(blog.user, blog) %>
          <span style="float: right;">
             <%= link_to blog.user.login, user_path(blog.user) %>
          </span>
          <br />
        <% end %>
      </div></div>
  <% else %>
    <div class="notice">现在没有公布的博客</div>
  <% end %>
</div>
