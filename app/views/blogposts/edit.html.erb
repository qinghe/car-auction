<% include_wysiwyg %>
<%= render 'users/user_menu' %>
<div class="left prepend-1">
<%= form_for @blogpost do |f| %>
  <%= render "layouts/error_messages", :target => @blogpost %>
  <div class="field">
  	<%= f.label "标题" %><br />
    <%= f.text_field :title, :value => @blogpost.title, :class => 'span-10' %>
  </div>
  <div class="field">
  	<%= f.label "内容" %><br />
    <%= f.text_area :content, :value => @blogpost.content, :class => 'span-10' %>
  </div>
  <div class="field">
  <%= f.label :recaptcha, "验证码" %><br />
  <%= raw(get_captcha(:options => {:theme => 'white', :tabindex => 10})) %>
  </div>
  <div class="actions">
    <%= f.submit "修改" %>
  </div>
  </div>
<% end %>