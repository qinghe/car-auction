<% unless @users.empty? %>
  <table class="list">
    <thead>
      <tr>
        <td>ID</td>
        <td>姓名</td>
        <td>Login</td>
        <td>Email</td>
        <td>Status</td>
        <td>Akcje</td>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= user.id %></td>
          <td><%= user.lastname %> <%= user.name %></td>
          <td><%= user.login %></td>
          <td><%= user.email %></td>
          <td><% if user.status == 0 %>停用<% elsif user.status == 1 %>未验证<% elsif user.status == 2 %>已验证<% else %>禁止<% end %></td>
          <td>
          	<%= link_to "编辑个人资料", edit_admin_user_path(user) %><br />
          	<%= link_to "Edytuj punkty", :action => "points", :id => user.id %><br />
          	<% if user.status == 2 %>
          		<%= link_to "禁止", admin_user_path(user, :status => 3), :method => "delete", :confirm => t('general.confirm') %>
          	<% elsif user.status == 1  %>
          		<%= link_to "禁止", admin_user_path(user, :status => 3), :method => "delete", :confirm => t('general.confirm') %><br />
          		<%= link_to "验证", admin_user_path(user, :status => 2), :method => "delete", :confirm => t('general.confirm') %>
          	<% elsif user.status == 0 %>
          		<%= link_to "激活", admin_user_path(user, :status => 2), :method => "delete", :confirm => t('general.confirm') %>
          	<% else %>
          		<%= link_to "解除禁止", admin_user_path(user, :status => 2), :method => "delete", :confirm => t('general.confirm') %>	
          	<% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <%= will_paginate @users %>
<% else %>
  <div class="clear notice">Nie znaleziono żadnych użytkowników.</div>
<% end %>
