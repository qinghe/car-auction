<% include_wysiwyg %>
<div class="">
		<%= form_tag({:action => "blogpostedit2"}) do %>
		  <div class="field">
		  	标题<br />
		    <%= text_field "blogpost", :title, :value => @blogpost.title, :class => "span-10" %>
		  </div>
		  <div class="field">
		  	内容<br />
		    <center><%= text_area "blogpost", :content, :value => @blogpost.content, :class => "mceEditor span-10" %></center>
		  </div>
		  <div class="actions">
		    <%= submit_tag "保存" %>
		  </div>
		<% end %>
</div>