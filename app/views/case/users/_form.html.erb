<% include_wysiwyg %>
<% form_url = @user.new_record? ? case_users_path(@user) : case_user_path(@user) %>
<div class="prepend-1 span-18 last">
  <div class="span-10">
    <table class>
      <tr>
        <td colspan="2" id="table_title">
          新建用户
        </td>
      </tr>
      <tr>
        <td style="text-align: center;">
          <%= form_for @user,:url=>form_url do |f| -%>
              <div class="field">
                <%= f.label :company_id, "所属部门" %><br />
                <%= f.select :company_id, nested_set_options([current_user.company]) {|i| "#{'-' * i.level} #{i.name}" } %>
              </div>
              <div class="field">
                <%= f.label :login, "登录名称" %><br />
                <%= f.text_field :login, :class=>"span-6" %>
              </div>
              <div class="field">
                <%= f.label :name, "名" %><br />
                <%= f.text_field :name, :class=>"span-6" %>
              </div>
              <div class="field">
                <%= f.label :lastname, "姓" %><br />
                <%= f.text_field :lastname,  :class=>"span-6" %>
              </div>
              <div class="field">
                <%= f.label :email, "邮箱" %><br />
                <%= f.text_field :email, :class=>"span-6" %>
              </div>
              <% if @user.new_record? %>
                  <div class="field">
                    <%= f.label :password, "密码" %><br />
                    <%= f.password_field :password, :value => "", :class=>"span-6" %>
                  </div>
                  <div class="field">
                    <%= f.label :password_confirmation, "密码确认" %><br />
                    <%= f.password_field :password_confirmation, :class=>"span-6" %>
                  </div>
              <% end %>
              <div class="field">
                <%= f.label :deposit, "保证金" %><br />
                <%= f.text_field :deposit %>
              </div>
              <div class="field">
                <%= f.label :avatar %><br />
                <%= f.file_field :avatar %>
              </div>
              <div class="field">
                <%= f.label :description %><br />
                <%= f.text_area :description, :class => "mceEditor span-10" %>
              </div>
              <%= f.submit "保存" %>
          <% end %>
        </td>
      </tr>
    </table>
  </div>
</div>