<% if @car.wait_for_evaluate? || @car.evaluated? %>
  <% @car.build_auction %>
  <div id="auction_dialog" title="委托拍卖">
    <%= form_for(@car, :url =>  new_auction_case_car_path(@car),:html=>{:id=>'auction_form'}, :remote=>true ) do |car_form| %>
      <%= render :partial=>"auction_form", :locals => { :car_form => car_form} %>
    <%end%>
  </div>
  <%= javascript_tag do %>
    $(function() {
      $( "#auction_dialog" ).dialog({
        autoOpen: false,
        width:800,
        modal: true,
        buttons: {
          "保存": function() {
             $( "#auction_form" ).submit();
          },
          "取消": function() {
            $( this ).dialog( "close" );
          }
        },
        close: function() {
        }
      });
    $( "#auction_car_button" )
        .click(function() {
          $( "#auction_dialog" ).dialog( "open" );
        });
    });
  <%end %>
<%end%>
