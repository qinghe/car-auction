<%
#是否已拍卖
#保证金
#保证金是否支付
#拍卖款是否支付
#过户时间
#过户反馈意见
@auction = @car.auction
%>
  <div id="confirm_transfer_dialog" title="过户信息">
    <%= form_for(@car, :url => confirm_transfer_case_car_path(@car),:html=>{:id=>'confirm_transfer_form'}, :remote=>true ) do |car_form| %>
      <table class='car_accident'>
        <%= car_form.fields_for :auction, @auction do |auction_form| %>
          <%= auction_form.hidden_field :type_name,:value=>'2' %>
          <%= auction_form.hidden_field :location,:value=>'网络' %>
          <tr class="aution_info">
            <td colspan="6" class="table_title">过户信息</td>
          </tr>
          <tr class="aution_info">
            <td>是否已拍卖 </td>
            <td><%= auction_form.select :is_auction, [['是',1], ['否',0]], selected: 1 %></td>
            <td>保证金是否支付</td>
            <td><%= auction_form.select :is_pay_transfer_bail, [['是',1], ['否',0]], selected: 1 %></td>
            <td>过户保证金</td>
            <td><%= auction_form.text_field :transfer_bail, class: 'span-3' %></td>
          </tr>
          <tr class="aution_info">
            <td>拍卖款是否支付 </td>
            <td><%= auction_form.select :is_pay_auction_price, [['是',1], ['否',0]], selected: 1 %></td>
            <td>过户时间</td>
            <td colspan="3"><%= auction_form.date_select :transfer_real_time %></td>
          </tr>
          <tr class="aution_info">
            <td>过户反馈意见 </td>
            <td colspan="5"><%= auction_form.text_area :transfer_opinion, rows: 3, style: 'width: 100%;height:auto;' %>
            </td>
          </tr>


          <tr class="aution_info">
            <td> 过户附件</td>
            <td colspan="5">
              <div id="car_transfer_image_list">
                <%= render :partial=>'car_file', :collection=>@car.transfer_images%>
              </div>
              <div class="clear">
                <%= render :partial=>"upload_file", :locals=>{:object=>@car.transfer_images.build, :field_name=>'uploaded'}%>
              </div>
            </td>
          </tr>

        <% end %>
      </table>
    <% end %>
  </div>
  <%= javascript_tag do %>
    $(function() {
      $( "#confirm_transfer_dialog" ).dialog({
        autoOpen: false,
        width:800,
        modal: true,
        buttons: {
          "提交": function() {
             $( "#confirm_transfer_form" ).submit();
          },
          "取消": function() {
            $( this ).dialog( "close" );
          }
        },
        close: function() {
        }
      });
    $( "#confirm_transfer_button" )
        .click(function() {
          $( "#confirm_transfer_dialog" ).dialog( "open" );
        });
    });
  <%end %>
