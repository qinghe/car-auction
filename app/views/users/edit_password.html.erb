<div class="clearfix wrapper">
  <div class="fl" style="width:20%">
    <%= render 'layouts/top_menu/user_menu' %>        
  </div>
  <div class="fr" style="width:80%">
    <div class="user_info">
    <% if current_user.role == "administrator" || current_user?(@user) %>
        <%= form_for @user,:url=>update_password_user_path do |f| -%>
        <%= render "layouts/error_messages", :target => @user %>
        <table>
          <tr> <td colspan="2" class="table_title">  设置一个新的密码  </td> </tr>
          <tr>
            <td> <%= f.label :password %></td> 
            <td> <%= f.password_field :password, :value => "", :class=>"span-6" %> </td>
          </tr>
          <tr>
            <td> <%= f.label :password_confirmation %></td> 
            <td> <%= f.password_field :password_confirmation, :class=>"span-6" %> </td>
          </tr>
          <tr> <td></td><td><%= f.submit "保存" %> </td></tr>
        </table>
        <% end %>
    <% end %>    
    </div>  
  </div>
</div>
