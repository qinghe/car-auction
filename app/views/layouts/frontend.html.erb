<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN"
       "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en" lang="en">
  <head>
    <META HTTP-EQUIV="Content-Type" CONTENT="text/html; charset=UTF-8">
    <title><%= @title || yield(:title) %> <%= @global_title %></title>
    <%= render 'layouts/stylesheets' %>
    <%= javascript_include_tag 'application' %>
    <%= javascript_include_tag "jquery.hoverIntent.minified", "jquery.dcmegamenu" %>
    <%= csrf_meta_tag %>
    <%= yield :head %>
  </head>
  <body>
      <div id="topBar" >
       <div class="container page_width clearfix">
          <div id="topNav">
            <ul class="fl">
              <li class="selected"><a class="index">大连华晨</a></li>
            </ul>

            <div class="fr">
              <% top_menu = case params[:controller].include?("admin")
              when true
                "layouts/top_menu/admin"
              else
                "layouts/top_menu/default"
              end
            %>
              <%= render :partial => top_menu %>
            </div>
          </div>
       </div>
      </div>
    <div class="container page_width" style="">
      
      <header id="mainNav">

        <div id="logo" class="clear">
        <%= link_to "华晨事故车拍卖平台", "/", :id => "logo" %>
        </div>
        <div  class="clear">
        <%= render :partial => "layouts/top_menu/main_menu" %>
        </div>
      </header>
      <%= render :partial => "layouts/car_filters" %>

      <% flash.keys.each do |key| %>
      <section class="prepend-1 append-1"><div class="<%= key.to_s %>"><%= flash[key].force_encoding("UTF-8") %></div></section>
      <% end %>
      <% if current_page?(root_path) %>
      <div class="page_width" style="position:relative;overflow: hidden">
        <%= render :partial=>"layouts/slider" %>
      </div>
      <% end %>
      <div>
        <%= render :partial=>"layouts/banner" %>
      </div>
      <div>
        <h1 class=""><%= @title || yield(:title) %></h1>
        <%= yield %>
        <div class="clear"> </div>
      </div>

      <%=render :partial => "layouts/top_menu/footer"%>
      <div class="copyline"></div>
      <footer class="prepend-1 append-1">
        <%= debug(params) if Rails.env.development? %>
      </footer>
    </div>
  </body>
</html>
