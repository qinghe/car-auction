<h2> 会员登录 </h2>
<div class="box">
<%= form_for(:session, :url => sessions_path) do |f| %>
  <div class="field">
    <%= f.label :email,'电子邮箱' %><br />
    <%= f.text_field :email %>
  </div>
  <div class="field">
    <%= f.label :password, "密码" %><br />
    <%= f.password_field :password %>
  </div>
  <div class="actions">
    <%= f.submit "登录" %>
  </div>
<% end %>

<p>没有一个帐户？<%= link_to "注册！", signup_path %></p>
</div>